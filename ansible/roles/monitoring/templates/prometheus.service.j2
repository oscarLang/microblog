[Unit]
Description=Prometheus
Wants=network-online.target
After=network-online.target

[Service]
User=deploy
Group=deploy
Type=simple
ExecStart=/usr/local/bin/prometheus-2.23.0.linux-amd64/prometheus --config.file /usr/local/bin/prometheus-2.23.0.linux-amd64/prometheus.yml --storage.tsdb.path /var/lib/prometheus/

[Install]
WantedBy=multi-user.target
